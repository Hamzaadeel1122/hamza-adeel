{{"section-custom-product-grid.css" |  asset_url |  stylesheet_tag}}

<style>
  #custom-product-grid-{{section.id}} .product-grid {
    grid-template-columns: repeat({{ section.settings.products_per_row }}, 1fr);
  }

  @media screen and (max-width: 749px) {
    #custom-product-grid-{{section.id}} .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<div class="custom-product-grid" id="custom-product-grid-{{section.id}}">
  {% if section.settings.heading != blank %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="product-grid" data-gap="{{ section.settings.grid_gap }}">
    {%- for block in section.blocks -%}
      {% assign product = block.settings.product %}
      {%- if product != blank -%}
        <div class="product-card" {{ block.shopify_attributes }}>
          <div class="product-card__image-wrapper">
            {%- render 'loading-spinner' -%}
            {% if product.featured_image != blank %}
              <a href="{{product.url}}">
              <img 
                srcset="{%- if product.featured_image.width >= 165 -%}{{ product.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if product.featured_image.width >= 360 -%}{{ product.featured_image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if product.featured_image.width >= 533 -%}{{ product.featured_image | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if product.featured_image.width >= 720 -%}{{ product.featured_image | image_url: width: 720 }} 720w,{%- endif -%}
                  {{ product.featured_image | image_url }} {{ product.featured_image.width }}w"
                src="{{ product.featured_image | image_url: width: 533 }}"
                sizes="(min-width: 1200px) 267px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                alt="{{ product.featured_image.alt | escape }}"
                class="product-card__image"
                loading="eager"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
              </a>
              <style>
                @media screen and (min-width: 749px)
                  {
                 #product-card__plus-icon-{{block.id}}{
                    top: {{ block.settings.icon_position_y }}%; left: {{ block.settings.icon_position_x }}%;
                   }
                 }
              </style>
              <div class="product-card__plus-icon" 
                id="product-card__plus-icon-{{block.id}}" 
                data-product-handle="{{ product.handle }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 22 22" fill="none" class="plus-icon">
                  <circle cx="11" cy="11" r="11" fill="#F8F8F8" fill-opacity="0.9"/>
                  <path d="M11.3457 7.04175V15.5033" stroke="black" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
                  <path d="M7.11523 11.2725H15.5768" stroke="black" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
                </svg>
              </div>
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
            {% endif %}
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% render 'product-popup' %}

{{ 'product-popup.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products per row (Desktop)",
      "default": 4
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "grid_gap",
      "label": "Space between products",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "icon_position_x",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Plus Icon Position X",
          "default": 85
        },
        {
          "type": "range",
          "id": "icon_position_y",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Plus Icon Position Y",
          "default": 10
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}